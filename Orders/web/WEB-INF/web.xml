            <param-value>simplePageCachingFilter</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SimplePageCachingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>-->

</web-app>